extends ../layout

block menu-item
  li.nav-item(class=(title === 'paste') ? 'active' : undefined)
    a.nav-link(href='/paste') paste

block content
  h1 Paste Tool
  p.lead Internal Tool for text sharing.
  hr
  .row
    .col-sm-3
      a.btn.btn-default.btn-block(href='/paste/new', role='button') New Paste »
      form(method='POST' action="/paste/load")
        div.form-group
          input#name.form-control(type='text', placeholder='Enter short ID here' name='short_id_input')
          input(type='hidden', name='_csrf', value=_csrf)
          button.btn.btn-default.btn-block(type='submit') Load »
